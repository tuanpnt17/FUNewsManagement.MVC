@model ServiceLayer.Models.NewsArticleDTO
@{
    Layout = "_CommonLayout";
    ViewData["Title"] = "Article";
}


<!-- Blog Details Hero Begin -->
<section class="blog-details-hero set-bg" data-setbg="common/img/breadcrumb3.png">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="blog__details__hero__text">
                    <h2>@Model.NewsTitle</h2>
                    <ul>
                        <li><a href="@Url.Action("Index")">Home</a></li>
                        <li>By @Model.CreatedBy?.AccountName</li>
                        <li>@Model.CreatedDate.ToString("MMMM dd, yyyy")</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="blog spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-5">
                <div class="blog__sidebar" style="padding-top: 0px !important">
                    @await Component.InvokeAsync("CategoryFilter")
                    @await Component.InvokeAsync("RecentNews")
                    </div>
            </div>
            <div class="col-lg-8 col-md-7">
                <div class="blog__details__text">
                    <img src="@Model.NewsSource" alt="">
                    <h3>@Model.Headline</h3>
                    <p>
                        @Model.NewsContent
                    </p>

                </div>
                <div class="blog__details__content">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="blog__details__author">
                                <div class="blog__details__author__pic">
                                    <img src="~/common/img/blog/details/details-author.jpg" alt="">
                                </div>
                                <div class="blog__details__author__text">
                                    <h6>@Model.CreatedBy?.AccountName</h6>
                                    <span>@Model.CreatedBy?.AccountRole</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="blog__details__widget">
                                <ul>
                                    <li><span>Categories:</span> @Model.Category?.CategoryName</li>
                                    <li>
                                        <span>Tags: </span> @string.Join(" - ", Model.NewsTags.Select(tag => tag.Tag?.TagName))
                                    </li>
                                </ul>
                                <div class="blog__details__social">
                                    <a href="#"><i class="fa fa-facebook"></i></a>
                                    <a href="#"><i class="fa fa-twitter"></i></a>
                                    <a href="#"><i class="fa fa-google-plus"></i></a>
                                    <a href="#"><i class="fa fa-linkedin"></i></a>
                                    <a href="#"><i class="fa fa-envelope"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>

@{
    Layout = "_DashboardLayout";
    ViewBag.Title = "NewsArticle Management";
}
@using PhamNguyenTrongTuanMVC.Helpers
@using RepositoryLayer.Enums
@model IEnumerable<PhamNguyenTrongTuanMVC.Models.NewsArticle.ViewNewsArticleViewModel>



<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <div class="d-flex align-items-center">
                <h4 class="card-title">News Article Management</h4>
                <button class="btn btn-primary btn-round ms-auto" type="button" id="openCreateModal">
                    <i class="fa fa-plus"></i>
                    Create
                </button>
            </div>
        </div>
        <div class="card-body">
            <div id="modalContainer"></div>
            <div class="table-responsive">
                <table id="add-row"
                       class="display table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(n => n.NewsArticleId)</th>
                            <th>@Html.DisplayNameFor(n => n.NewsTitle)</th>
                            <th>@Html.DisplayNameFor(n => n.Headline)</th>
                            <th>@Html.DisplayNameFor(n => n.CreatedByName)</th>
                            <th>@Html.DisplayNameFor(n => n.ModifiedDate)</th>
                            <th>@Html.DisplayNameFor(n => n.NewsStatus)</th>
                            <th style="width: 10%">Action</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>@Html.DisplayNameFor(n => n.NewsArticleId)</th>
                            <th>@Html.DisplayNameFor(n => n.NewsTitle)</th>
                            <th>@Html.DisplayNameFor(n => n.Headline)</th>
                            <th>@Html.DisplayNameFor(n => n.CreatedByName)</th>
                            <th>@Html.DisplayNameFor(n => n.ModifiedDate)</th>
                            <th>@Html.DisplayNameFor(n => n.NewsStatus)</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var newsArticle in Model)
                        {
                            <tr>
                                <td>@newsArticle.NewsArticleId</td>
                                <td>@FormatStringHelper.TruncateString(newsArticle.NewsTitle, 4)</td>
                                <td>@FormatStringHelper.TruncateString(newsArticle.Headline, 5)</td>
                                <td>@newsArticle.CreatedByName</td>
                                <td>@newsArticle.ModifiedDate.ToString("dd/MM/yyyy HH:mm")</td>
                                <td><span class="@(newsArticle.NewsStatus != NewsStatus.Inactive? "badge badge-success" : "badge badge-danger")">@newsArticle.NewsStatus</span></td>
                                <td>
                                    <div class="form-button-action">
                                        <button type="button"
                                                data-categoryid="@newsArticle.NewsArticleId"
                                                class="btn btn-link btn-primary btn-lg updateNewsArticleBtn"
                                                data-original-title="Edit Task">
                                            <i class="fa fa-edit"></i>
                                        </button>
                                        <button type="button"
                                                data-categoryid="@newsArticle.NewsArticleId"
                                                class="btn btn-link btn-danger deleteNewsArticleBtn"
                                                data-original-title="Remove">
                                            <i class="fa fa-times"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


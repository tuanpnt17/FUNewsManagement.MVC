@using PhamNguyenTrongTuanMVC.Helpers
@model IEnumerable<ServiceLayer.Models.NewsArticleDTO>

<div class="blog__sidebar__item">
    <h4>Recent News</h4>
    <div class="blog__sidebar__recent">
        @foreach (var item in Model)
        {
            <a href="@Url.Action("ArticleDetail", "NewsArticle", new {articleId = item.NewsArticleId})" class="blog__sidebar__recent__item">
                <div class="blog__sidebar__recent__item__pic">
                    <img src="@item.NewsSource" alt="" width="100px" height="auto">
                </div>
                <div class="blog__sidebar__recent__item__text">
                    <h6 style="font-weight: 650">@item.NewsTitle</h6>
                    <span>@FormatHelper.FormatActualTime(item.CreatedDate)</span>
                </div>
            </a>
        }
    </div>
</div>
